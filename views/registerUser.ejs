<%- include('partials/header') %>


<br><br><br><br><br><br>
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-5 align-self-end">
                <h1 class="text-black font-weight-bold">Register --></h1>
                <hr class="divider my-4" />
                <a href="/signin"><p class="text-white-75 font-weight-light mb-5">have an account? Login Now!</p></a>
            </div>
            <div class="col-lg-4 align-self-baseline">
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label for="first_name">First Name</label>
                    <input type="name" class="form-control" id="first_name" placeholder="first name" name="first_name" required>
                </div>
                <div class="form-group">
                    <label for="last_name">Last Name</label>
                    <input type="last_name" class="form-control" id="last_name" placeholder="last name" name="last_name">
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
    </div>
</header>

<%- include('partials/footer') %>